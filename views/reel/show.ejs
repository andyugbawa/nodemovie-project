        <form action="/reel/<%= reel._id %>?_method=DELETE" method="POST">
            <button class="btn">DELETE</button>
        </form>

    </div> -->

    <div class="movie-container">
        <div class="movie-poster">
            <div class="messages">
                <%= messages %>

            </div>
        <h1><%= reel.title %></h1>
    
        <% if (reel.images.length > 0) { %>
            <% reel.images.forEach((image) => { %>
                <img src="/uploads/<%= image.filename %>" alt="<%= image.filename %>" width="300">
    
            <% }) %>
            <% } else { %>
            <p>No images uploaded.</p>
            <% } %>
        <ul>
            <li class="genre">Genre:<%= reel.genre %></li>
            <li class="year">Year:<%= reel.year %></li>
            
        </ul>
      </div>

    </div>


  


